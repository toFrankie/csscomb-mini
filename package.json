{
  "name": "csscomb-mini",
  "version": "1.0.0",
  "description": "使用 csscomb 格式化 wxss",
  "author": "Frankie <1426203851@qq.com>",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/toFrankie/csscomb-mini.git"
  },
  "keywords": [
    "lint",
    "eslint",
    "prettier",
    "csscomb",
    "gulp-csscomb",
    "wechat",
    "weixin",
    "miniprogram"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "csscomb": "gulp wxssTask",
    "csscomb:mini": "gulp csscombMini --path 'miniprogram/**/*.wxss'",
    "eslint:fix": "eslint --cache --fix . --ext .js",
    "prettier:fix": "prettier --write './**/*.{json,js,wxml.axml,swan,css,wxss,acss}'",
    "format:fix": "run-s prettier:fix eslint:fix csscomb:mini",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./cz-config.js"
    }
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.1.1",
    "csscomb": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.27.0",
    "eslint-config-alloy": "^4.1.0",
    "gulp": "^4.0.2",
    "gulp-csscomb": "^3.1.0",
    "gulp-debug": "^4.0.0",
    "gulp-rename": "^2.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "plugin-error": "^1.0.1",
    "prettier": "^2.6.2",
    "through2": "^4.0.2"
  }
}
